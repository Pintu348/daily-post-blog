{{>head}}
{{>navigation}}
<div id="dw" class="text-center w-25 container mt-5">
    <div class="shadow p-3 bg-body rounded">
        <main class="form-signin">
            <form action="/login" method="post">
                <h1 class="h3 mb-3 fw-normal">Login Form</h1>
                {{#if successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>congratulations!</strong>{{successMessage}} <br>
                </div>
                {{/if}}
                {{#if errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show fs-6" role="alert">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"
                        name="email" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mt-2">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                        name="password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <div class="checkbox text-left mb-3 mt-2 ">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                        <a class="text-decoration-none ms-5" href="/resetpassword">Forgot Password?</a>
                    </label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
                <p class="mt-3 mb-3 text-muted">Â© 2023</p>
            </form>
        </main>
    </div>
</div>
<script src="devicewidth.js"></script>
{{>end}}